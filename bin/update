#!/usr/bin/env bash

flatpak update

sudo npm update --global

paru

rustup update

pip3 list --outdated |
    cut --delimiter=' ' --fields=1 |
    tr ' ' '\n' |
    awk '{if (NR >= 3) print}' |
    cut --delimiter=' ' --fields=1 |
    xargs --max-args=1 pip3 install --upgrade

echo
echo 'nvim :Lazy'
echo 'zinit self-update; zinit update --all'
