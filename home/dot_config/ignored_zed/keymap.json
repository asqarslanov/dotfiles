[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": { "ctrl-h": "vim::HelixNormalAfter" }
  },
  {
    "context": "VimControl",
    "bindings": {
      "$": ["vim::EndOfLine", { "display_lines": true }],
      "down": ["vim::Down", { "display_lines": true }],
      "end": ["vim::EndOfLine", { "display_lines": true }],
      "enter": "workspace::Save",
      "g $": ["vim::EndOfLine", { "display_lines": false }],
      "g 0": ["vim::StartOfLine", { "display_lines": false }],
      "g down": ["vim::Down", { "display_lines": false }],
      "g end": ["vim::EndOfLine", { "display_lines": false }],
      "g home": ["vim::StartOfLine", { "display_lines": false }],
      "g j": ["vim::Down", { "display_lines": false }],
      "g k": ["vim::Up", { "display_lines": false }],
      "g up": ["vim::Up", { "display_lines": false }],
      "h": "vim::WrappingLeft",
      "home": ["vim::StartOfLine", { "display_lines": true }],
      "j": ["vim::Down", { "display_lines": true }],
      "k": ["vim::Up", { "display_lines": true }],
      "l": "vim::WrappingRight",
      "left": "vim::WrappingLeft",
      "right": "vim::WrappingRight",
      "shift-c": "editor::AddSelectionBelow",
      "shift-u": "editor::Redo",
      "space f": "file_finder::Toggle",
      "space q": "pane::CloseActiveItem",
      "up": ["vim::Up", { "display_lines": true }],
      "g h": "vim::StartOfLine",
      "g l": "vim::EndOfLine"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-w h": "workspace::ActivatePaneLeft",
      "ctrl-w l": "workspace::ActivatePaneRight",
      "ctrl-w k": "workspace::ActivatePaneUp",
      "ctrl-w j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": ["vim::PushAddSurrounds", {}],
      "m s": ["vim::PushAddSurrounds", {}]
    }
  }
]
